#!/bin/python

from os import environ as env
import clicommon

# Usage msg
USAGE_MSG = "Usage: list_experiments"
OVERLORD = env['OVERLORD']
TOKEN = env['TOKEN']
ARGS = 0

# Create CLI
cli = clicommon.CLI(
    overlord=OVERLORD,
    token=TOKEN,
    usage=USAGE_MSG,
    args_expected=ARGS,
)

# GET
exps = cli.GET('/experiments')

# Print applications
print('-------------------------------------------------------')
print('- Experiments:')
i = 0
for exp in exps:
    print("-- {0}: {1} - {2} : {3}".format(i, exp['id'], exp['name'], exp['status']))
    i = i + 1
print('-------------------------------------------------------')
